<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/triviaStructureLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Texto para mostrar el nombre de la trivia -->
        <TextView
            android:id="@+id/triviaNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:text="Nombre de la Trivia" />

        <!-- Cronómetro -->
        <TextView
            android:id="@+id/cronometroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo restante: 00:00"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Aquí se agregarán dinámicamente las preguntas y sus opciones -->

    </LinearLayout>

</ScrollView>
